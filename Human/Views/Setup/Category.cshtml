                                                </div>
                                            </div>

                                        </div>
                                        @*  <div id="btnAdd_Contract" class="submit-section text-center">
                                                <button id="btn_add_Contract" type="submit" style="font-size:16px !important;border-radius:5px;" class=" action-button"><i class="fa-solid fa-folder-plus"></i> Add</button>
                                            </div>*@
                                    </div>
                                </div>
                            </form>
                        </fieldset>
                        <fieldset id="tab2">
                            <form id="msform1" method="post">
                                <div class="row">
                                    <div class="col-md-4">

                                        <div class="col-md-12">

                                            <div class="form-group">
                                                <label>@Human.Resource.Language.Job (VN) <span class="text-danger">*</span></label>
                                                <input class="form-control font-14" id="job_name_VN" type="text" name="vi" />
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label>@Human.Resource.Language.Job (EN) <span class="text-danger">*</span></label>
                                                <input type="text" class="form-control font-14" id="job_name_EN" name="TitleName_en" />
                                            </div>
                                        </div>

                                    </div>
                                    <div class="col-md-8">
                                        <div class="card profile-box flex-fill border-form">
                                            <div class="card-body ">
                                                <div class="table-wrapper-time-keep" style="margin-top: 7px;overflow-y:auto;">
                                                    <div class="table-caption p-0">
                                                        <div style="margin:0;padding-left:10px;" class="font-15">
                                                            Danh sách chức vụ
                                                        </div>
                                                    </div>
                                                    <table id="table-list-job" class="table-hover" style="width:100% !important;">
                                                        <thead>
                                                            <tr>
                                                                <th>###</th>
                                                                <th>
                                                                    @Human.Resource.Language.Job - VI <br />(Section - VI)
                                                                </th>
                                                                <th>
                                                                    @Human.Resource.Language.Job - EN <br>(Section - EN)
                                                                </th>
                                                            </tr>
                                                        </thead>
                                                        <tbody id="tbody_job">
                                                            @if (Model.LST_JOBTITLE.Any())
                                                            {
                                                                foreach (var item in Model.LST_JOBTITLE)
                                                                {
                                                                    <tr id="tr_job_@item.JobTitle_ID">
                                                                        <td>
                                                                            <div class="form-check-inline mr-0">
                                                                                <input class="job_select form-check-input mr-0" name="job_id_select" type="radio" value="@item.JobTitle_ID" />
                                                                                @*   <input type="hidden" class="job_id_select" value="@item.DEPARTMENT_ID" />*@
                                                                            </div>
                                                                        </td>
                                                                        <td>@item.TitleName_vi</td>
                                                                        <td>@item.TitleName_en</td>
                                                                    </tr>
                                                                }
                                                            }
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </fieldset>
                        <fieldset id="tab3">
                            <form id="msform2" method="post">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label>Salary code <span class="text-danger">*</span></label>
                                                        <input class="form-control font-14" id="salary_code" type="number" name="SALARY_CODE" />
                                                    </div>
                                                </div>
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label>Salary value <span class="text-danger">*</span></label>
                                                        <input type="text" class="form-control font-14" id="salary_value" name="SALARY_VALUE" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-8">
                                                <div class="card profile-box flex-fill border-form">
                                                    <div class="card-body ">
                                                        <div class="table-wrapper-time-keep" style="margin-top: 7px;overflow-y:auto;">
                                                            <div class="table-caption p-0">
                                                                <div style="margin:0;padding-left:10px;" class="font-15">
                                                                    Danh sách bậc lương
                                                                </div>
                                                            </div>
                                                            <table id="table-list-salaryLevel" class="table-hover" style="width:100% !important;">
                                                                <thead>
                                                                    <tr>
                                                                        <th>###</th>
                                                                        <th>
                                                                            Salary Code
                                                                        </th>
                                                                        <th>
                                                                            Salary Value
                                                                        </th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody id="tbody_salary_level">
                                                                    @if (Model.LST_SALARY_LEVEL.Any())
                                                                    {
                                                                        foreach (var item in Model.LST_SALARY_LEVEL)
                                                                        {
                                                                            <tr id="tr_salarylv_@item.ID">
                                                                                <td>
                                                                                    <div class="form-check-inline mr-0">
                                                                                        <input class="salarylv_select form-check-input mr-0" name="salarylv_id_select" type="radio" value="@item.ID" />
                                                                                       @*<input type="hidden" class="job_id_select" value="@item.DEPARTMENT_ID" />*@
                                                                                    </div>
                                                                                </td>
                                                                                <td>@item.SALARY_CODE</td>
                                                                                <td>@(item.SALARY_VALUE !=0? string.Format("{0:N0} VND", item.SALARY_VALUE):"")</td>
                                                                            </tr>
                                                                        }
                                                                    }
                                                                </tbody>
                                                            </table>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>