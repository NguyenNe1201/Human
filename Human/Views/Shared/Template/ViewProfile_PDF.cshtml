@model Human.Models.ProfileEmployeeModel
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Profile Pdf</title>
    <style>
        body {
            color: #6c757d;
            background-color: #f5f6f8;
            margin-top: 20px;
            font-family: 'Myriad Pro', sans-serif !important;
        }

        .card-box {
            background-color: #fff;
            background-clip: border-box;
            /* border: 1px solid #e7eaed; */
            padding: 1.5rem;
        }

        .avatar-xl {
            height: 6rem;
            width: 6rem;
        }

        .rounded-circle {
            border-radius: 50% !important;
        }

        .nav-pills .nav-link.active,
        .nav-pills .show > .nav-link {
            color: #fff;
            background-color: #1abc9c;
        }

        .nav-pills .nav-link {
            border-radius: .25rem;
        }

        .navtab-bg li > a {
            background-color: #f7f7f7;
            margin: 0 5px;
        }

        .nav-pills > li > a,
        .nav-tabs > li > a {
            color: #6c757d;
            font-weight: 600;
        }

        .mb-4,
        .my-4 {
            margin-bottom: 2.25rem !important;
        }

        .tab-content {
            padding: 20px 0 0 0;
        }

        .progress-sm {
            height: 5px;
        }

        .m-0 {
            margin: 0 !important;
        }

        .table .thead-light th {
            color: #6c757d;
            background-color: #f1f5f7;
            border-color: #dee2e6;
        }

        .social-list-item {
            height: 2rem;
            width: 2rem;
            line-height: calc(2rem - 4px);
            display: block;
            border: 2px solid #adb5bd;
            border-radius: 50%;
            color: #adb5bd;
        }

        .text-purple {
            color: #6559cc !important;
        }

        .border-purple {
            border-color: #6559cc !important;
        }

        .timeline {
            margin-bottom: 50px;
            position: relative;
        }

            .timeline:before {
                background-color: #dee2e6;
                bottom: 0;
                content: "";
                left: 50%;
                position: absolute;
                top: 30px;
                width: 2px;
                z-index: 0;
            }

            .timeline .time-show {
                margin-bottom: 30px;
                margin-top: 30px;
                position: relative;
            }

            .timeline .timeline-box {
                background: #fff;
                display: block;
                margin: 15px 0;
                position: relative;
                padding: 20px;
            }

            .timeline .timeline-album {
                margin-top: 12px;
            }

                .timeline .timeline-album a {
                    display: inline-block;
                    margin-right: 5px;
                }

                .timeline .timeline-album img {
                    height: 36px;
                    width: auto;
                    border-radius: 3px;
                }

        .timeline-sm {
            padding-left: 110px;
        }

            .timeline-sm .timeline-sm-item {
                position: relative;
                padding-bottom: 20px;
                padding-left: 40px;
                border-left: 2px solid #dee2e6;
            }

                .timeline-sm .timeline-sm-item:after {
                    content: "";
                    display: block;
                    position: absolute;
                    top: 3px;
                    left: -7px;
                    width: 12px;
                    height: 12px;
                    border-radius: 50%;
                    background: #fff;
                    border: 2px solid #1abc9c;
                }

                .timeline-sm .timeline-sm-item .timeline-sm-date {
                    position: absolute;
                    left: -104px;
                }

        .timeline-sm {
            padding-left: 110px !important;
        }

        .font-we-lig {
            font-weight: lighter;
        }
    </style>
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/MaterialDesign-Webfont/5.3.45/css/materialdesignicons.css"
          integrity="sha256-NAxhqDvtY0l4xn+YVa6WjAcmd94NNfttjNsDmNatFVc=" crossorigin="anonymous" />
    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
</head>
<body>
    <div>
        <div class="row">
            <div class="col-lg-4 col-xl-4" style="padding: 0px;">
                <div class="text-center" style=" height: 1470px; background-color: #183f5c; color: white;">
                    <div style="background-color: #28699a; padding: 24px 24px 5px 24px;">
                        <img src="@Model.AVATAR_EMP"
                             class="rounded-circle avatar-xl img-thumbnail" alt="profile-image" style="width: 250px;">
                        <h4 class="mb-0 text-uppercase" style="font-size: 23px; font-weight: bold; margin-top: 20px;">@Model.EMP_PROFILE.FULLNAME</h4>
                        <p style="margin: 10px 0px;font-style:italic;font-size:17px;">Department: @Model.EMP_PROFILE.DEPARTMENT_NAME_EN</p>
                        <p style="font-style: italic; font-size: 17px;">Position: @Model.EMP_PROFILE.TitleName_en</p>
                    </div>
                    <div class="card-box" style="background-color: #183f5c;padding-top:10px;">
                        @*Contact employee*@
                        <h4 class="header-title font-20" style="font-weight: bold;"><i class="fas fa-id-card-alt"></i>  Contact</h4>
                        <div class="text-left mt-3">
                            <p class="mb-2 font-14 d-flex"> 
                                <i class="fas fa-phone-square-alt" style="margin-top:3px;height:20px;"></i><span class="ml-2">@Model.EMP_PROFILE.PHONE_NUMBER</span>
                            </p>

                            <p class="mb-2 font-14 d-flex">
                                <i class="fas fa-envelope-open-text" style="margin-top:3px;height:20px;"></i> <span class="ml-2 ">@Model.EMP_PROFILE.EMAIL</span>
                            </p>
                            <p class="mb-1 font-14 d-flex">
                                <i class="fas fa-map-marked-alt" style="margin-top:3px;height:20px;"></i> <span class="ml-2"> @Model.EMP_PROFILE.DISTRICT_TEMP_ADDRESS</span>
                            </p>
                            <p class="mb-2 font-14 d-flex">
                                <i class="fas fa-calendar-alt" style="margin-top:3px;height:20px;"></i><span class="ml-2">@Model.EMP_PROFILE.DATE_OF_BIRTH.ToString("dd/MM/yyyy")</span>
                            </p>
                            <p class="mb-1 font-14 d-flex">
                                <i class="fas fa-user-circle" style="margin-top:3px;height:20px;"></i> <span class="ml-2"> @Model.EMP_PROFILE.SEX</span>
                            </p>
                        </div>
                        @*skills employee*@
                        <h4 class="header-title font-20" style="font-weight: bold;"><i class="fas fa-book-reader"></i>  Skill</h4>
                        <p class="font-14" style="text-align:left;">Web Design</p>
                        <div class="progress mb-3" style="height: 5px">
                            <div class="progress-bar bg-primary" role="progressbar" style="width: 80%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <p class="font-14" style="text-align:left;">Website Markup</p>
                        <div class="progress mb-3" style="height: 5px">
                            <div class="progress-bar bg-danger" role="progressbar" style="width: 72%" aria-valuenow="72" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <p class="font-14" style="text-align:left;">One Page</p>
                        <div class="progress mb-3" style="height: 5px">
                            <div class="progress-bar bg-success" role="progressbar" style="width: 89%" aria-valuenow="89" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <p class="font-14" style="text-align:left;">Mobile Template</p>
                        <div class="progress mb-3" style="height: 5px">
                            <div class="progress-bar bg-warning" role="progressbar" style="width: 55%" aria-valuenow="55" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <p class="font-14" style="text-align:left;">Backend API</p>
                        <div class="progress" style="height: 5px">
                            <div class="progress-bar bg-info" role="progressbar" style="width: 66%" aria-valuenow="66" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>

                </div> <!-- end card-box -->
            </div> <!-- end col-->
            <div class="col-lg-8 col-xl-8" style="padding: 0px;">
                <div class="card-box">

                    <div class="tab-content">

                        <div class="tab-pane show active" id="about-me">

                            <h5 class="mb-4 text-uppercase" style="font-weight:bold;">
                                <i class="mdi mdi-briefcase mr-1" style="color: #28699a;"></i> Experience
                            </h5>

                            <ul class="list-unstyled timeline-sm">
                                <li class="timeline-sm-item">
                                    <span class="timeline-sm-date">2015 - 2018</span>
                                    <h5 class="mt-0 mb-1">Lead designer / Developer</h5>
                                    <p>websitename.com</p>
                                    <p class="text-muted mt-2">
                                        Everyone realizes why a new common language
                                        would be desirable: one could refuse to pay expensive translators.
                                        To achieve this, it would be necessary to have uniform grammar,
                                        pronunciation and more common words.
                                    </p>

                                </li>

                            </ul>

                            <div class="row">
                                <div class="col-lg-6 col-xl-6">
                                    <h5 class="mb-3 mt-4 text-uppercase" style="font-weight:bold;">
                                        <i class="fas fa-users" style="color:#28699a;"></i> Personal Informations
                                    </h5>
                                    <div class="text-left mt-3">
                                        <p class="mb-2 font-13 font-we-lig">
                                            <strong>Cardnumber :</strong><span class="ml-2">@Model.EMP_PROFILE.ID_CARDNUMBER</span>
                                        </p>

                                        <p class="mb-2 font-13 font-we-lig">
                                            <strong>Date Issue :</strong> <span class="ml-2 ">@Model.EMP_PROFILE.DATE_ISSUE.ToString("dd/MM/yyyy")</span>
                                        </p>
                                        <p class="mb-1 font-13 font-we-lig">
                                            <strong>Nationality :</strong> <span class="ml-2">@Model.EMP_PROFILE.NATIONALITY</span>
                                        </p>
                                        <p class="mb-1 font-13 font-we-lig">
                                            <strong>Religion :</strong> <span class="ml-2">@Model.EMP_PROFILE.RELIGION</span>
                                        </p>
                                        <p class="mb-1 font-13 font-we-lig">
                                            <strong>Marital Status :</strong> <span class="ml-2">Single</span>
                                        </p>
                                    </div>

                                </div>
                                <div class="col-lg-6 col-xl-6">
                                    <h5 class="mb-3 mt-4 text-uppercase" style="font-weight:bold;">
                                        <i class="fa-solid fa-money-check-dollar" style="color: #28699a;"></i> Bank Informations
                                    </h5>
                                    <div class="text-left mt-3">
                                        <p class="mb-2 font-13 font-we-lig">
                                            <strong>Bank Code :</strong><span class="ml-2">@Model.EMP_PROFILE.BANK_CODE</span>
                                        </p>

                                        <p class="mb-2 font-13 font-we-lig">
                                            <strong>Bank Name :</strong> <span class="ml-2 "> @Model.EMP_PROFILE.BANK_NAME</span>
                                        </p>

                                        <p class="mb-1 font-13 font-we-lig">
                                            <strong>Bank Number :</strong> <span class="ml-2">@Model.EMP_PROFILE.BANKACOUNT_NUMBER</span>
                                        </p>

                                        <p class="mb-1 font-13 font-we-lig">
                                            <strong>Social Insurance :</strong> <span class="ml-2">@Model.EMP_PROFILE.SOBHXH</span>
                                        </p>
                                        <p class="mb-1 font-13 font-we-lig">
                                            <strong>Health Insurance :</strong> <span class="ml-2">@Model.EMP_PROFILE.SOBHYT</span>
                                        </p>
                                    </div>

                                </div>
                            </div>

                            <h5 class="mb-4 text-uppercase" style="margin-top: 20px;font-weight:bold;">
                                <i class="fa-solid fa-school" style="color: #28699a;"></i> Education
                            </h5>

                            <ul class="list-unstyled timeline-sm">
                                <li class="timeline-sm-item">
                                    <span class="timeline-sm-date">@Model.EMP_PROFILE.YEAR_EDUCATION_1</span>
                                    <h5 class="mt-0 mb-1">@Model.EMP_PROFILE.UNIVERSITY_NAME_1</h5>
                                    @*   <p>websitename.com</p>*@
                                    <p class="text-muted mt-2">
                                        @Model.EMP_PROFILE.MAJOR_1
                                    </p>

                                </li>

                            </ul>
                        </div>


                    </div> <!-- end tab-content -->
                </div> <!-- end card-box-->

            </div> <!-- end col -->
        </div>
    </div>
</body>

</html>